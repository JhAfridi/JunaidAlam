@model IEnumerable<JunaidAlam.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Product", "Create", null, new { @class = "btn btn-primary", style = "margin-top:10px" })
</p>
<br />
@* Searching Box *@
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <input type="text" name="srhtxt" class="form-control" value=" @Session["txt"]" />
    <input type="submit" value="Search" class="btn btn-primary" style="margin-top:10px" />
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.P_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Des)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Catg)
        </th>
        <th></th>
    </tr>


    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Des)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Img)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Catg)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6"><h2 class="text-center text-danger" style="padding-top:25px"> Not Found Record !</h2></td>
        </tr>
    }

</table>
